<h1 class="text-center mt-4">Create a new category</h1>

<div class="row justify-content-center text-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @category %>

    <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>

      <div class="form-group row mb-3">
        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

    <% end %>
  </div>
  
  <div class="mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path %>
  </div>
</div>